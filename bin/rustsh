#!/bin/bash

alias run='cargo run'
alias check='cargo check'
alias build='cargo build'
alias add='cargo add'
alias remove='cargo remove'
alias doc='cargo doc --open'
alias install='cargo install'
alias toml='vim Cargo.toml'
alias main='vim src/main.rs'
alias lib='vim src/lib.rs'

new() {
	cargo new ${1} ; cd ${1}
}

publish() {
    if [[ ${1} == "local" ]]
    then
        cargo build --release
        # TODO get the package name / executable name from Cargo.toml and then copy the file to $HOME/bin
    elif [[ ${1} == "remote" ]]
    then
        cargo publish
    else
        echo "usage: ${0} [local | remote]"
    fi
}

src() {
    vim src/${1}
}
